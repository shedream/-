<Window x:Class="HardDiskIntegerPartitionCalculator.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:local="clr-namespace:HardDiskIntegerPartitionCalculator"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        Title="{Binding WindowTitle, Mode=OneTime, UpdateSourceTrigger=PropertyChanged}"
        Width="450"
        DataContext="{Binding RelativeSource={RelativeSource Self}}"
        FocusManager.FocusedElement="{Binding ElementName=inputtbx}"
        FontFamily="Consolas"
        ResizeMode="CanMinimize"
        SizeToContent="Height"
        WindowStartupLocation="CenterScreen"
        mc:Ignorable="d">

    <Window.Resources>
        <Style TargetType="{x:Type Border}">
            <Setter Property="CornerRadius" Value="0" />
        </Style>

        <Style x:Key="TagBorderStyle"
               TargetType="{x:Type Border}">
            <Setter Property="Height" Value="32" />
            <Setter Property="Margin" Value="4" />
            <Setter Property="Padding" Value="8,2" />
            <Setter Property="HorizontalAlignment" Value="Left" />
            <Setter Property="VerticalAlignment" Value="Center" />
            <Setter Property="Background" Value="Azure" />
            <Setter Property="CornerRadius" Value="16" />
        </Style>

        <Style TargetType="{x:Type TextBlock}">
            <Setter Property="Margin" Value="4" />
            <Setter Property="HorizontalAlignment" Value="Center" />
            <Setter Property="VerticalAlignment" Value="Center" />
            <Setter Property="FontSize" Value="60" />
        </Style>

        <Style TargetType="{x:Type TextBox}">
            <Setter Property="HorizontalContentAlignment" Value="Center" />
            <Setter Property="VerticalContentAlignment" Value="Center" />
            <Setter Property="Background" Value="Transparent" />
            <Setter Property="BorderThickness" Value="0" />
            <Setter Property="FontSize" Value="60" />
        </Style>
    </Window.Resources>

    <DockPanel>
        <DockPanel.Resources>
            <Style TargetType="{x:Type Border}">
                <Setter Property="CornerRadius" Value="4" />
            </Style>
        </DockPanel.Resources>

        <Grid Margin="8"
              DockPanel.Dock="Top">
            <Grid.RowDefinitions>
                <RowDefinition />
                <RowDefinition />
                <RowDefinition />
            </Grid.RowDefinitions>

            <Border Grid.Row="0"
                    Background="#ADD8E6">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition />
                        <RowDefinition />
                    </Grid.RowDefinitions>

                    <Grid.ColumnDefinitions>
                        <ColumnDefinition />
                        <ColumnDefinition Width="Auto" />
                    </Grid.ColumnDefinitions>

                    <Border Style="{StaticResource TagBorderStyle}">
                        <TextBlock HorizontalAlignment="Center"
                                   VerticalAlignment="Center"
                                   FontSize="20"
                                   Text="分区大小" />
                    </Border>

                    <TextBox x:Name="inputtbx"
                             Grid.Row="1"
                             Grid.Column="0"
                             Foreground="#13404C"
                             MaxLength="6"
                             Text="{Binding InputPartitionStr, UpdateSourceTrigger=PropertyChanged}" />

                    <TextBlock Grid.Row="1"
                               Grid.Column="1"
                               Foreground="#13404C"
                               Text="GB" />
                </Grid>
            </Border>

            <Border Grid.Row="1"
                    Margin="0,4,0,0"
                    Background="#E4A4B3">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition />
                        <RowDefinition />
                    </Grid.RowDefinitions>

                    <Grid.ColumnDefinitions>
                        <ColumnDefinition />
                        <ColumnDefinition Width="Auto" />
                    </Grid.ColumnDefinitions>

                    <Border Style="{StaticResource TagBorderStyle}">
                        <TextBlock HorizontalAlignment="Center"
                                   VerticalAlignment="Center"
                                   FontSize="20"
                                   Text="FAT32" />
                    </Border>

                    <TextBox Grid.Row="1"
                             Grid.Column="0"
                             Foreground="#13404C"
                             IsReadOnly="True"
                             Text="{Binding OutputFAT32, UpdateSourceTrigger=PropertyChanged, Mode=OneWay}" />

                    <TextBlock Grid.Row="1"
                               Grid.Column="1"
                               Foreground="#13404C"
                               Text="MB" />
                </Grid>
            </Border>

            <Border Grid.Row="2"
                    Margin="0,4,0,0"
                    Background="#90C28E">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition />
                        <RowDefinition />
                    </Grid.RowDefinitions>

                    <Grid.ColumnDefinitions>
                        <ColumnDefinition />
                        <ColumnDefinition Width="Auto" />
                    </Grid.ColumnDefinitions>

                    <Border Style="{StaticResource TagBorderStyle}">
                        <TextBlock HorizontalAlignment="Center"
                                   VerticalAlignment="Center"
                                   FontSize="20"
                                   Text="NTFS" />
                    </Border>

                    <TextBox Grid.Row="1"
                             Grid.Column="0"
                             Foreground="#13404C"
                             IsReadOnly="True"
                             Text="{Binding OutputNTFS, UpdateSourceTrigger=PropertyChanged, Mode=OneWay}" />

                    <TextBlock Grid.Row="1"
                               Grid.Column="1"
                               Foreground="#13404C"
                               Text="MB" />
                </Grid>
            </Border>
        </Grid>

        <StatusBar DockPanel.Dock="Bottom"
                   Foreground="Gray">
            <StatusBarItem HorizontalAlignment="Right"
                           Content="{Binding About, Mode=OneTime, UpdateSourceTrigger=PropertyChanged}" />
        </StatusBar>
    </DockPanel>
</Window>
